<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lzmouse.myguc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:allowBackup="true"
        android:icon="@mipmap/ic_lan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lan"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <provider
            android:name="com.lzmouse.myguc.GenericFileProvider"
            android:authorities="${applicationId}.my.package.name.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name="com.lzmouse.myguc.Main.MainActivity"
            android:theme="@style/AppTheme.BrandedLaunch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lzmouse.myguc.Intranet.IntranetActivity"
            android:parentActivityName="com.lzmouse.myguc.Main.MainActivity" />

        <receiver
            android:name="com.lzmouse.myguc.Intranet.DownloadFileCLicked"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.lzmouse.myguc.Intranet.DownloadService"
            android:exported="false" />

        <activity
            android:name="com.lzmouse.myguc.Intranet.FilesActivity"
            android:parentActivityName="com.lzmouse.myguc.Main.MainActivity" />
        <activity
            android:name="com.lzmouse.myguc.Login.LoginActivity"
            android:parentActivityName="com.lzmouse.myguc.Main.MainActivity" />
        <activity
            android:name="com.lzmouse.myguc.Intranet.FavoritesActivity"
            android:parentActivityName="com.lzmouse.myguc.Main.MainActivity" />
        <activity
            android:name="com.lzmouse.myguc.Notebook.NotebookActivity"
            android:label="Notebook"
            android:parentActivityName="com.lzmouse.myguc.Main.MainActivity" />
        <activity
            android:name="com.lzmouse.myguc.Notebook.SubjectActivity"
            android:parentActivityName="com.lzmouse.myguc.Notebook.NotebookActivity" />
        <activity
            android:name="com.lzmouse.myguc.Notebook.EntryActivity"
            android:parentActivityName="com.lzmouse.myguc.Notebook.SubjectActivity"
            android:theme="@style/EntryTheme" />
        <activity
            android:name="com.lzmouse.myguc.IntroActivity"
            android:theme="@style/Theme.Intro" />

        <service
            android:name="com.lzmouse.myguc.Notebook.AudioRecordService"
            android:exported="false" />

        <receiver
            android:name="com.lzmouse.myguc.AudioBroadCastReciver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>